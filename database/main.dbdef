import "module.dbdef";

document AudioFile {
    implements Named;
    implements Playable;

    -- comment
    file File;
}

interface Playable {
}

document PlayList {
    implements Named;
    playables [ref Playable];
}
document User {
    implements Versioned;
    implements Named;

    messages [Message];

    files [ref File];

    unique asc index name;
}

document Message {
    from Text;
    to Text;
    subject Text;
    body Text;
    dateTime DateTime;
}

document File {
    implements Versioned;
    implements Named;

    contents Maybe Text;
}
interface Named {
    name Text check nonempty;
}
interface Versioned {
    version Maybe Int64;
    changes [ChangeRecord];
    desc index changes.time;
}

document ChangeRecord {
    field    Text;
    oldValue Text;
    newValue Text;
    time     DateTime;
}
